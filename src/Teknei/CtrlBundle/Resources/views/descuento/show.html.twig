{% extends 'base.html.twig' %}

{% block body %}
    <h1>Descuento</h1>

    <table>
        <tbody>
            <tr>
                <th>Iddescuento</th>
                <td>{{ descuento.iddescuento }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
