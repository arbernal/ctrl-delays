{% extends 'base.html.twig' %}

{% block body %}
   <h1 class="text-info"> Horario</h1>
        <table class="table table-striped">
        <tbody>
            <tr>
                <th>Horario</th>
                <td>{{ horario.idhorario }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if horario.dia %}{{ horario.dia|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{% if horario.hora %}{{ horario.hora|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
         <label class="checkbox-inline">
            <a href="{{ path('horario_index') }}">
       <label><button type="button" class="btn btn-primary btn-xs">Regresar</button></a></label>
     </ul>
{% endblock %}
