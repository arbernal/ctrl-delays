{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tarifas</h1>

    <table>
        <tbody>
            <tr>
                <th>Tarifa</th>
                <td>{{ tarifa.idtari }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ tarifa.tarifa }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tarifas_index') }}">Regresar</a>
        </li>
        <li>
            <a href="{{ path('tarifas_edit', { 'id': tarifa.idtari }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
