{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Catalogos</h1>

    <table>
        <thead>
            <tr>
                <th>Descripcion Corta</th>
                <th>Descripcion Completa</th>
                <th>Estatus</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for catum in catas %}
            <tr>
                <td>{{ catum.descCort }}</td>
                <td>{{ catum.desComp }}</td>
                <td>{{ catum.idesta }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cata_show', { 'id': catum.idcata }) }}">
                            <input type="submit" value="Mostrar"></a>
                        </li>
                        <li>
                            <a href="{{ path('cata_edit', { 'id': catum.idcata }) }}">
                            <input type="submit" value="Editar"></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cata_new') }}">
            <input type="submit" value="Agregar"></a>
        </li>
    </ul>
{% endblock %}
