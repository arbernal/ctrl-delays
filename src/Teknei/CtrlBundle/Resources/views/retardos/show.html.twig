{% extends 'base.html.twig' %}

{% block body %}
    <h1>Retardos</h1>

    <table>
        <tbody>
            <tr>
                <th>Idretardos</th>
                <td>{{ retardo.idretardos }}</td>
            </tr>
            <tr>
                <th>Horallega</th>
                <td>{% if retardo.horaLlega %}{{ retardo.horaLlega|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('retardos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('retardos_edit', { 'id': retardo.idretardos }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
