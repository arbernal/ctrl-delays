{% extends 'base.html.twig' %}

{% block body %}
   <h1 class="text-info"> Juntas</h1>
      <ul class="nav nav-pills">
      <li class="active"> <a href="{{ path('retardos_new') }}" href="#" class="btn btn-primary btn-xs">Nuevo</a></li>
    </ul>
        
  <table class="table table-striped">
        <thead>
            <tr>
            <th></th>
                <th>Hora de Llegada</th>
                 <th>Usuario</th>
                  <th>Horario</th>
                   <th>Multas</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for retardo in retardos %}
             <tr class= "info">
                <td><a href="{{ path('retardos_show', { 'id': retardo.idretardos }) }}"></a></td>
                <td>{% if retardo.horaLlega %}{{ retardo.horaLlega|date('H:i:s') }}{% endif %}</td>
                <td>{{retardo.idusuario.usuario }}</td>
                <td>{{retardo.idhorario.dia }}</td>
                <td>{{retardo.idesta.descComp }}</td>
                <td>{{retardo.idtari.tarifa }}</td>
                <td>
                    <ul>
                        <label class="checkbox-inline">
                            <a href="{{ path('retardos_show', { 'id': retardo.idretardos }) }}">
                      <label><button type="button" class="btn btn-primary btn-xs">Ver</button></a></label>
                       <label class="checkbox-inline">
                            <a href="{{ path('retardos_edit', { 'id': retardo.idretardos }) }}">
                            <label><button type="button" class="btn btn-primary btn-xs">Editar</button></a></label>
                       
                        <label class="checkbox-inline">
                     <a href="{{ path('retardos_delete', { 'id': retardo.idretardos }) }}" onclick="return confirm('¿Desea eliminar este elemento?')">
                     <label><button type="button" class="btn btn-primary btn-xs">Eliminar</button></a></label>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
